#!/bin/bash

./configure                     \
  --prefix=<%= node[:postgres][:basedir] %>-<%= node[:postgres][:version] %>     \
  --with-pgport=<%= node[:postgres][:port] %>            \
  --with-tcl                    \
  --with-perl                   \
  --with-python                 \
  --enable-integer-datetimes    \
  --without-krb5                \
  --without-pam                 \
  --without-bonjour             \
  --without-openssl             \
  --with-readline               \
  --with-libxml                 \
  --with-zlib                   \
  --with-gnu-ld
